{
  "manifest_version": 3,
  "name": "Refresh and Select All Tabs",
  "version": "0.1",
  "author": "nomadic",
  "description": "Refresh or select all tabs with the click of a button",

  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" },

  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png"
    },
    "default_title": "Refresh all pages"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["tabs", "storage"],

  "options_page": "options.html",

  "commands": {
    "refresh-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Refresh all tabs"
    },
    "select-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Select all tabs"
    }
  }
}

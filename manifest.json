{
  "manifest_version": 3,
  "name": "Refresh All Tabs",
  "version": "0.2",
  "author": "nomadic",
  "description": "Refresh all tabs with the click of a button",

  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" },

  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png"
    },
    "default_title": "Refresh all pages"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["tabs"],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      }
    }
  }
}
